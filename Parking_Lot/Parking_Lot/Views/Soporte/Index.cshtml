@{
    Layout = null;
    <link rel="stylesheet" type="text/css" href="~/Clase4.css" />
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<h1 id="text">Soporte Técnico</h1>
<br />
<div class="container">
    <br />
    <form class="well span8" role="form">
        <div class="row">

            <div class="col-md-4">

                <div class="form-group">
                    <label>Nombres y Apellidos</label>
                    <input type="text" class="form-control" requerid placeholder="Ingresar Nombre y Apellido" name="Text">
                </div>

                <div class="form-group">
                    <label>Correo Electrónico</label>
                    <input type="email" class="form-control" requerid placeholder="Ingresar Correo Electronico" name="Email">
                </div>

                <div class="form-group">
                    <label>Opcion de Soporte</label>
                    <select required class="form-control" id="subject" name="subject">
                        <option selected value=null>-- [ Seleccionar una Opcion ] --</option>
                        <option value="service"> Reclamos </option>
                        <option value="service"> Servicios </option>
                        <option value="service"> Ayuda </option>
                    </select>
                </div>

            </div>

            <div class="col-md-8">
                <label>Descripción</label>
                <textarea class="form-control" rows="10" required></textarea>
                <button class="btn btn-primary pull-right voffset3" type="submit">Enviar</button>
            </div>

        </div>
    </form>
</div>