@{
    <link rel="icon" type="image/png" href="~/icon.png" />
    <meta charset="utf-8" />
    Layout = null;
    <title>Parking Lot</title>
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
}



<div class="well">
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane active in" id="home">
            <form action="/Editar/Index/@Model.Id" method="post">
                <label>Primer Nombre</label>
                <input type="text" value="@Model.FirstName" class="input-xlarge">
                <label>Segundo Nombre</label>
                <input type="text" value="@Model.LastName" class="input-xlarge">
                <label>Correo Electronico</label>
                <input type="email" value="@Model.Email" class="input-xlarge">
                <label>Fecha Nacimiento</label>
                <input type="date" value="@Model.Date" class="input-xlarge">
                <label>Genero</label>
                <select name="DropDownTimezone" value="@Model.Genero" class="input-xlarge">
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                    <option value="Sin Genero">Sin Genero</option>
                </select>
                <div>
                    <button>Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>  