
@{
    Layout = null;
}

<div>
    <table style="text-align:justify;">
        <thead>
            <tr>
                <th class="col-md-2">Tipo</th>
                <th class="col-md-2">Color</th>
                <th class="col-md-2">Descripcion</th>
                <th class="col-md-2">Marca</th>
                <th class="col-md-2">Modelo</th>
                <th class="col-md-2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var vehiculo in Model)
            {
                <tr>
                    <td class="col-md-2"> @vehiculo.Tipo</td>
                    <td class="col-md-2"><input type="Color" disabled value="@vehiculo.Color" /></td>
                    <td class="col-md-2">@vehiculo.Descripcion</td>
                    <td class="col-md-2">@vehiculo.Marca</td>
                    <td class="col-md-2">@vehiculo.Modelo</td>
                    <td class="col-md-2"><a href="/Vehiculos/Borrar?id=@vehiculo.Id" class="btn btn-bot">Borrar</a></td>
                </tr>
            }
            <tr>
                <td></td>
            </tr>
        </tbody>
        
    </table>

</div>
